@model IEnumerable<Storefront.DATA.EF.Models.Candle>

@{
    ViewData["Title"] = "Tiled Products";
}

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-center mb-3 pb-3">
            <div class="col-md-12 heading-section text-center ftco-animate">
                <h2 class="mb-4">Tiled table</h2>
                <p>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Create">Add New Candle</a> <span>|</span>
                    }
                    <a asp-action="Index" asp-controller="Candles">Table View</a>
                </p>
            </div>
        </div>
    </div>
        <div class="row">
    @foreach (var item in Model)
    {
            <div class="col-sm-12 col-md-6 col-lg-4 ftco-animate d-flex">
                <div class="product d-flex flex-column">
                    <a asp-action="Details" asp-route-id="@item.CandleId" class="img-prod">
                        <img class="img-fluid" src="~/images/product-1.png" alt="Colorlib Template">
                        <div class="overlay"></div>
                    </a>
                    <div class="text py-3 pb-4 px-3">
                        <div class="d-flex">
                            <div class="rating">
                                <p class="text-right mb-0">
                                    <a href="#"><span class="ion-ios-star-outline"></span></a>
                                    <a href="#"><span class="ion-ios-star-outline"></span></a>
                                    <a href="#"><span class="ion-ios-star-outline"></span></a>
                                    <a href="#"><span class="ion-ios-star-outline"></span></a>
                                    <a href="#"><span class="ion-ios-star-outline"></span></a>
                                </p>
                            </div>
                        </div>
                        <h3><a asp-action="Details" asp-route-id="@item.CandleId"> @item.CandleName</a></h3>
                        <div class="pricing">
                            <p class="price"><span>@Html.DisplayFor(modelItem => item.Price)</span></p>
                        </div>
                        <p class="bottom-area d-flex px-3">
                            <a href="#" class="add-to-cart text-center py-2 mr-1"><span>Add to cart <i class="ion-ios-add ml-1"></i></span></a>
                            <a asp-action="Details" asp-route-id="@item.CandleId" class="buy-now text-center py-2">Details<span><i class="ion-ios-cart ml-1"></i></span></a>
                        </p>
                    </div>
                </div>
            </div>
    }
        </div>


</section>

